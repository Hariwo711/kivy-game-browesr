#:kivy 1.0.9

<Menu>:
    BoxLayout:
        Button:
            text: "Football Game"
            background_color : 0, 0, 1, 1
            on_press:
                # You can define the duration of the change
                # and the direction of the slide
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'football_game'
        Button:
            text: "Snake Game"
            background_color : 1, 1, 0, 1
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'Snake_game'

        Button:
            text: "Pikachu wants to eat food"
            background_color : 1, 0, 1, 1
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'food_picker'

<game_over>:
    BoxLayout:
    Button:
        text: 'Game Over'
        font_size: 150
        background_color : 240/255.0, 0/255.0, 0/255.0, 1
        on_press:
            app.stop()

<SoccerBall>:
    size: 50, 50 
    canvas:
        Ellipse:
            source: 'football.png'
            pos: self.pos
            size: self.size          

<SoccerPlayer>:
    size: 150, 150
    src: 'assets/player2run.png'
    anim_delay: 0.1
    canvas.before:
        Rectangle:
            pos:self.pos
            size:self.size
            source:self.src

<SoccerGame>:
    ball: soccer_ball
    player1: player_left
    player2: player_right
    
    canvas:
        Rectangle:
            pos: self.center_x-5, 0
            size: 1, self.height
    
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'field2.png'
    
    Label:
        font_size: 70  
        font_name: 'fonts/RobotoCondensed-BoldItalic.ttf'
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)
        
    Label:
        font_size: 70  
        font_name: 'fonts/RobotoCondensed-BoldItalic.ttf'
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)
    Label:
        font_size: root.width / 20
        font_name: 'fonts/CampusPersonalUse-dE27.ttf'
        center_x: root.center_x
        top: root.top - (root.height/10)
        text: 'PUMPS BALL GAME'
    SoccerBall:
        id: soccer_ball
        center: self.parent.center
        
    SoccerPlayer:
        id: player_left
        center_y: root.center_y
        center_x: root.center_x+200
        
    SoccerPlayer:
        id: player_right
        src: 'assets/player1kick.png'
        center_y: root.center_y
        center_x: root.center_x-200

<soccerscreen>:
    game_engine: soccergame_widget_id
    SoccerGame:
        id: soccergame_widget_id



<SnakeGame>:
    Label:
        text: str(root.score)
        center_x: root.center_x+50
    Label:
        text: 'Your Score:'


<PokemonFoodPicker>:
    Label:
        text: 'Choose The right food'
        top: root.top - 5*(root.width/10)
    
    Label:
        text: str(root.food_choice)
        top: root.top - 7.5*(root.height/10)        
    
    Label:
        text: 'Your Score:'+ str(root.score)